<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_world"
    android:background="@android:color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context="com.blacio.squarespuzzle.ScoreActivityWorld">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WORLD LEADERS"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="@dimen/worldtitle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/border"
        android:layout_margin="7dp"
        android:layout_weight="1"
        android:weightSum="3"
        android:onClick="FIVEGame">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:weightSum="3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nume1world"
                android:layout_weight="1"
                android:textColor="@color/color_grey"
                android:padding="3dp"
                android:text="Nobody"
                android:textSize="@dimen/lev"/>


            <TextView
                android:id="@+id/country1world"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_grey"
                android:layout_weight="1"
                android:paddingLeft="7dp"
                android:text="from Nowhere"
                android:textSize="@dimen/gmply"/>

            <TextView
                android:id="@+id/easyWorld"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_grey"
                android:layout_weight="1"
                android:paddingLeft="7dp"
                android:text="Score: 0"
                android:textSize="@dimen/scr"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/color_grey"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingRight="5dp"
            android:text="EASY"
            android:textSize="@dimen/menubutsize"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/border"
        android:layout_margin="7dp"
        android:layout_weight="1"
        android:weightSum="3"
        android:onClick="SEVENGame">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:weightSum="3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nume2world"
                android:layout_weight="1"
                android:textColor="@color/color_grey"
                android:padding="3dp"
                android:text="Nobody"
                android:textSize="@dimen/lev"/>


            <TextView
                android:id="@+id/country2world"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_grey"
                android:layout_weight="1"
                android:paddingLeft="7dp"
                android:text="from Nowhere"
                android:textSize="@dimen/gmply"/>

            <TextView
                android:id="@+id/mediumWorld"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_grey"
                android:layout_weight="1"
                android:paddingLeft="7dp"
                android:text="Score: 0"
                android:textSize="@dimen/scr"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/color_grey"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingRight="5dp"
            android:text="MEDIUM"
            android:textSize="@dimen/menubutsize"
            />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/border"
        android:layout_margin="7dp"
        android:layout_weight="1"
        android:weightSum="3"
        android:onClick="TENGame">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:weightSum="3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nume3world"
                android:layout_weight="1"
                android:textColor="@color/color_grey"
                android:padding="3dp"
                android:text="Nobody"
                android:textSize="@dimen/lev"/>


            <TextView
                android:id="@+id/country3world"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_grey"
                android:layout_weight="1"
                android:paddingLeft="7dp"
                android:text="from Nowhere"
                android:textSize="@dimen/gmply"/>

            <TextView
                android:id="@+id/hardWorld"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_grey"
                android:layout_weight="1"
                android:paddingLeft="7dp"
                android:text="Score: 0"
                android:textSize="@dimen/scr"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/color_grey"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingRight="5dp"
            android:text="HARD"
            android:textSize="@dimen/menubutsize"
            />


    </LinearLayout>


</LinearLayout>
